@model GameON.ViewModels.CreditCardFormViewModel
@{
    ViewBag.Title = "Add Card";
}

<h2>Add a Card</h2>

@using (Html.BeginForm("Create", "CreditCard"))
{
    <p class="alert alert-info">All Fields are <strong>required</strong></p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.UserId)
    <div class="form-group">
        @Html.LabelFor(c=> c.CardNumber)
        @Html.TextBoxFor(c => c.CardNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CardNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ExpireDate)
        @Html.TextBoxFor(c => c.ExpireDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.ExpireDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.CCV)
        @Html.TextBoxFor(c => c.CCV, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CCV)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>


}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}